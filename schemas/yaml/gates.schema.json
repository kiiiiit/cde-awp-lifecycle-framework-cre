{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "gates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "inputs": {"type": "array", "items": {"type": "string"}},
          "outputs": {"type": "array", "items": {"type": "string"}},
          "raci": {"type": "object"},
          "data_quality": {"type": "array", "items": {"type": "string"}},
          "checklist": {
            "type": "object",
            "properties": {
              "required_artifacts": {"type": "array", "items": {"type": "string"}},
              "readiness_criteria": {"type": "array", "items": {"type": "string"}},
              "meeting_format": {"type": "string"},
              "decision_protocol": {"type": "string"}
            },
            "additionalProperties": false
          }
        },
        "required": ["id", "name"]
      }
    }
  },
  "required": ["gates"],
  "additionalProperties": false
}
